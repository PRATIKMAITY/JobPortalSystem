<script>
    var path = "https://localhost:44359/api/";
    setCookie = function setCookie(cname, cvalue) {
        var d = new Date();
        d.setTime(d.getTime() + (1 * 24 * 60 * 60 * 1000));
        var expires = "expires=" + d.toUTCString();
        document.cookie = cname + "=" + cvalue + "; " + expires;
    };

    $('#profilepic').html('<img src="../images/about-1-570x350.jpg" alt=""/ style="height:30px;width:30px; border-radius: 50%;">');

    $("#login").click(function () {
        var user = {};
        user.Email = $('#Uname').val();
        user.Password = $('#Upass').val();
        $.ajax({
            url: path + 'auth/Login',
            type: 'POST',
            data: user,
            success: function (response) {
                //console.log(response);
                if (response.Succeeded) {
                    var islogin = 1;
                    $.cookie('UserId', response.UserId, { expires: 7, path: '/' });
                    $.cookie('Token', response.Token, { expires: 7, path: '/' });
                    $.cookie('UserName', response.UserName, { expires: 7, path: '/' });
                    $.cookie('Role', response.rolename, { expires: 7, path: '/' });
                    $.cookie('LogInFlag', islogin, { expires: 7, path: '/' });
                    
                    if (response.rolename == "Student") {
                        Checklogin();
                        window.location.reload();
                    }
                    else {

                        window.location.href = '/Admin';
                    }
                }
                else {
                    alert(response.Message);
                }


              

            },
            error: function () {
                console.log('Error in Operation');
            }
        });
    });

    function getCookie(cname) {
        var name = cname + "=";
        var decodedCookie = decodeURIComponent(document.cookie);
        var ca = decodedCookie.split(';');
        for (var i = 0; i < ca.length; i++) {
            var c = ca[i];
            while (c.charAt(0) == ' ') {
                c = c.substring(1);
            }
            if (c.indexOf(name) == 0) {
                return c.substring(name.length, c.length);
            }
        }
        return "";
    }

    function Checklogin() {
        var res = getCookie('LogInFlag');
        if (res == 1) {

            document.getElementById("sin").style.visibility = 'hidden';
            document.getElementById("reg").style.visibility = 'hidden';
            document.getElementById("profile").style.visibility = 'visible';
        }

    }

</script>


